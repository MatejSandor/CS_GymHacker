<AnchorPane fx:id="rootPane" prefHeight="400.0" prefWidth="650.0" style="-fx-background-color: #00031B;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="BackEnd.Login">
   <children>
      <ImageView fitHeight="375.0" fitWidth="413.0" layoutX="277.0" layoutY="23.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@Images/PixelCharacter.png" />
         </image>
      </ImageView>
      <Button fx:id="logInButton" layoutX="180.0" layoutY="235.0" mnemonicParsing="false" onAction="#loadMainMenu" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: #2FBCFF; -fx-background-radius: 8px;" text="LOG IN" textFill="WHITE">
         <font>
            <Font name="Open Sans Bold" size="12.0" />
         </font>
      </Button>
      <TextField fx:id="usernameField" layoutX="64.0" layoutY="119.0" prefHeight="30.0" prefWidth="216.0" promptText="USERNAME" style="-fx-background-radius: 8px;">
         <font>
            <Font name="Open Sans Semibold" size="12.0" />
         </font></TextField>
      <PasswordField fx:id="passwordField" layoutX="64.0" layoutY="176.0" prefHeight="30.0" prefWidth="216.0" promptText="PASSWORD" style="-fx-background-radius: 8px;">
         <font>
            <Font name="Open Sans Semibold" size="12.0" />
         </font></PasswordField>
      <ImageView fitHeight="52.0" fitWidth="156.0" layoutX="61.0" layoutY="50.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@Images/Logo.png" />
         </image>
      </ImageView>
      <Label fx:id="lblErrors" layoutX="61.0" layoutY="211.0" prefHeight="22.0" prefWidth="224.0" textFill="WHITE" />
      <Button fx:id="closingButton" layoutX="586.0" layoutY="10.0" mnemonicParsing="false" onAction="#closeApplication" style="-fx-background-color: transparent;" text="CLOSE" textFill="WHITE" />
   </children>
</AnchorPane>
